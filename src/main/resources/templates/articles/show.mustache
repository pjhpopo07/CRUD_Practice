{{>layouts/header}}

<table class="table">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Email</th>
        <th scope="col">Password</th>
    </tr>
    </thead>
    <tbody>
    {{#members}}
    <tr>
        <th>{{id}}</th>
        <td>{{email}}</td>
        <td>{{password}}</td>
    </tr>
    {{/members}}
    </tbody>
</table>

<a href="/members/{{members.id}}" class="btn btn-primary">수정하기</a>
<a href="/members/{{members.id}}/delete" class="btn btn-danger">삭제하기</a>
<a href="/members" class="btn btn-primary">Go to member list</a>

{{>layouts/footer}}